# =============================================================================
# Auto Paper Digest - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# =============================================================================
# Hugging Face Configuration
# =============================================================================
# Get your token from: https://huggingface.co/settings/tokens
# Required permissions: write access to datasets
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Hugging Face username or organization
HF_USERNAME=your-username

# Dataset name for storing videos (will be created if not exists)
# Full path will be: HF_USERNAME/HF_DATASET_NAME
HF_DATASET_NAME=paper-digest-videos

# =============================================================================
# GitHub Configuration (Optional - for auto-push)
# =============================================================================
# Repository for storing markdown digests
# Format: username/repo-name
GITHUB_DIGEST_REPO=your-username/paper-digests

# Personal access token (optional, for private repos or auto-push)
# Get from: https://github.com/settings/tokens
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Quality Control Configuration
# =============================================================================
# Minimum quality score (0-100) for content to be accepted
MIN_QUALITY_SCORE=60.0

# Minimum citations for papers (0 allows new papers)
MIN_CITATIONS=0

# Minimum stars for GitHub projects
MIN_GITHUB_STARS=100

# Optional: Semantic Scholar API (for advanced paper metadata)
# Get from: https://www.semanticscholar.org/product/api
# S2_API_KEY=your-semantic-scholar-api-key
# ENABLE_S2=false

# =============================================================================
# Deduplication Configuration
# =============================================================================
# Title similarity threshold (0.0-1.0, default: 0.85)
TITLE_SIMILARITY_THRESHOLD=0.85

# Abstract/content semantic similarity threshold (0.0-1.0, default: 0.90)
ABSTRACT_SIMILARITY_THRESHOLD=0.90

# Merge strategy for duplicates (keep_first | keep_highest_quality)
DEDUP_MERGE_STRATEGY=keep_first

# Sentence embedding model (default: all-MiniLM-L6-v2)
# Options: all-MiniLM-L6-v2 (90MB, fast) | all-mpnet-base-v2 (420MB, accurate)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Enable semantic similarity for deduplication (true | false)
ENABLE_SEMANTIC_DEDUP=true
